#include <bits/stdc++.h>
#define ll long long int
using namespace std;

int main()
{
    ll t;
    cin >> t;
    while (t--)
    {
        ll x, k;
        cin >> x >> k;
        if (k > x)
        {
            cout << 1 << endl;
            cout << x << endl;
        }
        else
        {
            if (x % k != 0)
            {
                cout << 1 << endl;
                cout << x << endl;
            }
            else
            {
                if (x % k == 0)
                {
                    cout << 2 << endl;
                    cout << 1 <<" "<< (x - 1) << endl;
                }
            }
        }
    }

    return 0;
}
