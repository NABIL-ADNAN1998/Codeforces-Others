//codeforces 9 A
#include <bits/stdc++.h>
#include <utility>
#include <vector>
using ll = long long int;
using namespace std;
int main()
{
    ll p, q = 6;
    ll ans, num1, num2;
    cin >> num1 >> num2;
    if (num1 >= num2)
    {
        p = num1;
    }
    else
    {
        p = num2;
    }

    if (p == 1)
    {
        cout << "1"
             << "/"
             << "1" << endl;
        return 0;
    }
    else
    {
        if (p == 2)
        {
            cout << "5"
                 << "/"
                 << "6" << endl;
            return 0;
        }
        else
        {
            if (p == 3)
            {
                cout << "2"
                     << "/"
                     << "3" << endl;
                return 0;
            }
            else
            {
                if (p == 4)
                {
                    cout << "1"
                         << "/"
                         << "2" << endl;
                    return 0;
                }
                else
                {
                    if (p == 5)
                    {
                        cout << "1"
                             << "/"
                             << "3" << endl;
                        return 0;
                    }
                    else
                    {
                        cout << "1"
                             << "/"
                             << "6" << endl;
                        return 0;
                    }
                }
            }
        }
    }
}
