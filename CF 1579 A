#include <bits/stdc++.h>
using ll = long long int;

using namespace std;

int main()
{
    ll t;
    cin >> t;
    while (t--)
    {
        string s;
        cin >> s;
        ll a = 0, b = 0, c = 0;
        for (ll i = 0; i < s.length(); i++)
        {
            if (s[i] == 'A')
            {
                a++;
            }
            else
            {
                if (s[i] == 'B')
                {
                    b++;
                }
                else
                {
                    c++;
                }
            }
        }

        if (a + c == b)
        {
            cout << "YES" << endl;
        }
        else
        {
            cout << "NO" << endl;
        }

        
    }
}
