#include <bits/stdc++.h>
using namespace std;
using ll = long long int;

void solve()
{
    string n;
    cin >> n;
    ll count = 0;
    for (ll i = 1; i < n.size(); i++)
    {
        if (n[i] == '1')
        {
            count++;
            break;
        }
    }
    if (count == 1)
    {

        cout << (n.size() + 1) / 2 << endl;
    }
    else
    {
        cout << n.size() / 2 << endl;
    }
}

int main()
{
    /*ll test;
    cin >> test;

    while (test--)
    {
        solve();
    }*/

    solve();
}
