#include <bits/stdc++.h>
using namespace std;
using ll = long long int;
 
 
 
void solve()
{
 
    ll n, oc = 0, ec = 0;
    cin >> n;
    ll a[n];
    for (ll i = 0; i < n; i++)
    {
        cin >> a[i];
        if (a[i] % 2 == 0)
        {
            ec++;
        }
        else
        {
            oc++;
        }
    }
 
    cout << min(oc, ec) << endl;
}
 
int main()
{
    ll test;
    cin >> test;
    while (test--)
    {
        solve();
    }
}
