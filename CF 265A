#include <bits/stdc++.h>
#include <utility>
#include <vector>
using ll = long long int;
using namespace std;
int main()
{
    string s, t;
    cin >> s;
    cin >> t;
    ll position = 0;
    for (ll i = 0; i < t.length(); i++)
    {
        if (t[i] == s[position])
        {
            position++;
        }
    }
    cout << position + 1 << endl;
    return 0;
}
