// codeofrces 431 A
#include <bits/stdc++.h>
#include <utility>
#include <vector>
using ll = long long int;
using namespace std;
int main()
{
    int a1, a2, a3, a4;
    cin >> a1 >> a2 >> a3 >> a4;
    string s;
    cin >> s;
    ll calory(0);
    for (ll i = 0; i < s.length(); i++)
    {
        if (s[i] == '1')
        {
            calory += a1;
        }
        else
        {
            if (s[i] == '2')
            {
                calory += a2;
            }
            else
            {
                if (s[i] == '3')
                {
                    calory += a3;
                }
                else
                {
                    if (s[i] == '4')
                    {
                        calory += a4;
                    }
                }
            }
        }
    }

    cout << calory << endl;
}
